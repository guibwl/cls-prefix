{
    "compilerOptions": {
      "target": "es5",
      "module": "esnext",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "importHelpers": true,
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true
    },
    "include": [
        "libs/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}